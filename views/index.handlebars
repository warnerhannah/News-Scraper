<div>
    {{#each articles}}
    <hr />
    <h3>{{this.headline}}</h3>
    <a href={{this.url}}>Go To Article</a>
    <form action="/api/{{this._id}}/saved" method="POST">
        <button id="save">Save Article</button>
    </form>    
    <h5>Article comments</h5>
    {{#each this.comments}}
    <p>{{this.body}}
        <form action="/api/{{this._id}}/deleted" method="POST">
            <button id="delete">Delete Comment</button>
        </form>
        </p>

    <small>{{this.createdDate}}</small>
    {{/each}}
    <form action="/api/{{this._id}}/comment" method="POST">
        <textarea name="body"></textarea>
        <button type="submit">Submit Comment</button>
    </form>
    <hr />
    {{/each}}


</div>

