<h2>Saved Articles</h2>
<div>
    {{#each articles}}
    <hr />
    <h3>{{this.headline}}</h3>
    <a href={{this.url}}>Go To Article</a>
    <form action="/api/{{this._id}}/unsave" method="POST">
        <button id="save">Unsave Article</button>
    </form>
    <h5>Article comments</h5>
    {{#each this.comments}}
    <p>{{this.body}}
        <form action="/api/{{this._id}}/delete" method="POST">
            <button id="delete">Delete Comment</button>
        </form>
        </p>

    <small>{{this.createdDate}}</small>
    {{/each}}
    <form action="/api/{{this._id}}/comments" method="POST">
        <textarea name="body"></textarea>
        <button type="submit">Submit Comment</button>
    </form>
    <hr />
    {{/each}}
    <hr />
</div>